<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filmDetails"

    android:columnCount="2"
    android:layout_gravity="center"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginBottom="0dp"
                android:src="@drawable/filmfirst">
            </ImageView>


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"

                    android:text="Год выпуска:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:layout_width="200dp"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/yearDetails"
                    />

                <TextView
                    android:layout_width="200dp"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:text="Название:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:text="Title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/titleDetail"
                    android:layout_width="200dp"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="Жанр:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="200dp"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/genreDetails"
                    android:layout_width="200dp"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="Время:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="200dp"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="Title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/timeDetails"
                    android:layout_width="200dp"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Возраст:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="200dp"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="Title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/ageDetails"
                    android:layout_width="200dp"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="Режесер:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="200dp"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/directorDetails"
                    android:layout_width="200dp"
                    android:gravity="start"
                    android:paddingStart="20dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>



            </GridLayout>

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>


            <TextView
                android:id="@+id/descriptionDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="текст"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_margin="15dp"
                />

        </LinearLayout>



    </ScrollView>




  </RelativeLayout>